public class BankAccount {
	
	private String name;
	private int accNo;
	private float interest;
	private String password;
	private float balance;
	
	public void setDetails(String name, int accNo, String password) {
		this.name=name;
		this.accNo=accNo;
		this.interest=2.5f;
		this.password=password;
		this.balance=0.0f;
	}
	
//	public getDetails() {
